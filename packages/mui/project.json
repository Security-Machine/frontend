{
    "name": "mui",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/mui/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "translate": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "g11n-cli update {projectRoot}/src {projectRoot}/i18n packages/base/i18n/extracted-messages.json packages/react/i18n/extracted-messages.json"
                ],
                "parallel": false
            },
            "inputs": [
                "^tsFiles"
            ],
            "outputs": [
                "{projectRoot}/i18n"
            ],
            "dependsOn": [
                {
                    "target": "translate",
                    "projects": [
                        "react"
                    ]
                }
            ]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        },
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/mui",
                "tsConfig": "packages/mui/tsconfig.lib.json",
                "project": "packages/mui/package.json",
                "entryFile": "packages/mui/src/index.ts",
                "external": ["react", "react-dom", "react/jsx-runtime"],
                "rollupConfig": "@nx/react/plugins/bundle-rollup",
                "compiler": "babel",
                "assets": [
                    {
                        "glob": "packages/mui/README.md",
                        "input": ".",
                        "output": "."
                    }
                ]
            },
            "dependsOn": [
                "translate",
                "lint",
                {
                    "target": "build",
                    "projects": [
                        "react"
                    ]
                }
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/mui/jest.config.ts"
            }
        },
        "storybook": {
            "executor": "@nx/storybook:storybook",
            "options": {
                "port": 4602,
                "configDir": "packages/mui/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nx/storybook:build",
            "outputs": ["{options.outputDir}"],
            "options": {
                "outputDir": "dist/storybook/mui",
                "configDir": "packages/mui/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "test-storybook": {
            "executor": "nx:run-commands",
            "options": {
                "command": "test-storybook -c packages/mui/.storybook --url=http://localhost:4602"
            }
        },
        "static-storybook": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "mui:build-storybook",
                "staticFilePath": "dist/storybook/mui"
            },
            "configurations": {
                "ci": {
                    "buildTarget": "mui:build-storybook:ci"
                }
            }
        }
    }
}
